<resources>

    <!-- Base application theme. -->
    <!-- changing it to no actionbar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubsectionHeader">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_16</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_16</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_16</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/error</item>
    </style>

</resources>
